# NPM Configuration for RIJG Frontend

# Ensure exact versions during install
save-exact=true

# Use package-lock.json strictly
package-lock=true

# Audit dependencies automatically
audit=true
audit-level=moderate

# Prevent auto-install of peer dependencies
legacy-peer-deps=false

# Engine strict mode - enforce Node/npm version requirements
engine-strict=true

# Progress bar for better visibility
progress=true

# Cache settings for faster installs
cache-min=86400

# Prevent accidental publishes (private package)
# This is a private package, should never be published
# publishConfig.access=restricted
